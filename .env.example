# Convex Backend
# Get these from: https://dashboard.convex.dev
CONVEX_DEPLOYMENT=dev:your-deployment-name
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# Clerk Authentication  
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_JWT_ISSUER_DOMAIN=your-clerk-jwt-issuer-domain.clerk.accounts.dev

# OpenAI API (Required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Anthropic API (Optional - for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key_here

# Zhipu AI API (Optional - for GLM models)
# Get from: https://open.bigmodel.cn/
ZHIPU_API_KEY=your_zhipu_api_key_here

# MCP Server (Optional - defaults to production server)
MCP_URL=https://agent-query-builder-toolbox.vercel.app/mcp

# GraphQL API Configuration (Required)
# This is the endpoint used for interactive components (pagination, search)
# IMPORTANT: Your MCP server must generate queries compatible with this endpoint's schema
GRAPHQL_API_ENDPOINT=https://your-graphql-api.example.com/graphql
# Optional: Bearer token for authentication (added as Authorization header)
GRAPHQL_API_BEARER_TOKEN=your_bearer_token_here

# PostHog Analytics (Optional)
# Get from: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com
